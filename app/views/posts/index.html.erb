<div class="pure-menu pure-menu-horizontal">
    <div class='pure-g'>
        <div class='pure-u-1-3'>
            <%= link_to 'Medium', root_path, class: 'pure-menu-heading pure-menu-link' %>
            <%= content_tag :ul, class: 'pure-menu-list' do %>
                <%= li_link_to 'Posts', posts_path %>
            <% end %>
        </div>
        <div class='pure-u-1-3'></div>
        <div class='pure-u-1-3'>
            <%= AuthHelper.user_navigation(self) %>
        </div>
    </div>
</div>

<h1>Posts</h1>

<% @posts.each do |post| %>
    <%= post.title %>
<% end %>


